---
const {title, url, pubDate} = Astro.props;
---

<li class="blog-card">
    <a href={url} class="blog-link">
        <div class="card-content">
            <div class="text-content">
                <p class="card-date">{pubDate && pubDate.toString().slice(0,10)}</p>
                <h2 class="card-title">{title}</h2>
            </div>
            <div class="card-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
            </div>
        </div>
    </a>
</li>

<style>
    .blog-card {
        list-style: none;
        margin: 1.5rem 0;
    }

    .blog-link {
        text-decoration: none;
        color: inherit;
        display: block;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border-radius: 8px;
        background-color: white;
        border: 1px solid var(--hover-bg);
 

    }

    .blog-link:hover {
        transform: translateY(-3px);
    }

    .card-content {
        padding: 1.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }

    .text-content {
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0.25rem 0 0 0;
        color: #2d3748;
        line-height: 1.4;
    }

    .card-date {
        font-size: 0.875rem;
        color: #64748b;
        margin: 0;
        font-weight: 500;
    }

    .card-arrow {
        flex-shrink: 0;
        color: #4a5568;
        opacity: 0.5;
        transition: all 0.3s ease;
    }

    .blog-link:hover .card-arrow {
        transform: translateX(5px);
        opacity: 1;
        color: #2563eb;
    }

    @media (max-width: 640px) {
        .card-content {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 1.1rem;
        }

        .card-date {
            font-size: 0.8rem;
        }
    }
</style>
