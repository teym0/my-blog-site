---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>


    <div class="text-center my-15">
      <h1 class="text-4xl font-bold mx-5">{frontmatter.title}</h1>
      <p class="mt-3 post-date">{frontmatter.pubDate.toString().slice(0,10)}</p>
    </div>

    <div class="my-5 font-bold underline">
      <a href="/blog/" class="hover:text-gray-950">記事一覧に戻る</a>
    </div>
    <div class="bg-white p-8 prose prose-lg lg:prose-lg">
      <div class="not-prose">
        {frontmatter.tags.map((tag: string) => (
          <a class="inline-block py-2 px-4 mr-2  bg-white border border-gray-600 rounded-2xl hover:bg-gray-600 active:bg-gray-600 hover:text-white duration-200" href={`/tags/${tag}`}>{tag}</a>
        ))}
      </div>

      <slot />
    </div>
</BaseLayout>
